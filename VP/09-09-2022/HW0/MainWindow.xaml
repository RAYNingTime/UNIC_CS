<Window x:Name="loginWindow" x:Class="VP_03_10_HW0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VP_03_10_HW0"
        mc:Ignorable="d"
        Title="My Login App" Height="330" Width="315" ResizeMode="CanMinimize">
    <Grid Margin="0,29,0,0" Height="285">
        <Image Width="220" Height="38" Margin="20,26,60,206" Source="/img/UNIC_logo.png"/>
        <TextBlock Height="25" Width="72" Text="Username" FontSize="16" Margin="20,70,210,175"/>
        <TextBox x:Name="usernameTextBox" Height="25" Width="150" Margin="111,70,40,173"/>

        <TextBlock Height="25" Width="72" Text="Password" FontSize="16" Margin="20,135,210,125"/>
        <PasswordBox x:Name="passwordBox" Height="25" Width="150" Margin="111,135,40,125"/>

        <Button x:Name="loginButton" Height="25" Width="150" Content="Login" Margin="111,175,40,68" Click="loginButton_Click"/>
        
        <TextBlock x:Name="messageTextBlock" FontSize="12" Padding="45,5" Height="30" Width="170" Text="" Margin="80,200,80,10"/>
    </Grid>
</Window>
