<Window x:Class="VP_09_10_HW1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VP_09_10_HW1"
        mc:Ignorable="d"
        Title="My Exam App" Height="260" Width="360">
    <Grid x:Name="mainGrid" Height="244">
        <TextBlock x:Name="questionBlock" FontSize="12" Height="25" Margin="26,20,0,200"/>

        <RadioButton x:Name="firstButton" FontSize="14" Height="20" Margin="40,64,0,145" GroupName="answers"/>
        <RadioButton x:Name="secondButton" FontSize="14" Height="20" Margin="40,88,0,121" GroupName="answers"/>
        <RadioButton x:Name="thirdButton" FontSize="14" Height="20" Margin="40,112,0,97" GroupName="answers"/>
        <RadioButton x:Name="fourthButton" FontSize="14" Height="20" Margin="40,136,0,73" GroupName="answers"/>

        <Button x:Name="submitButton" Content="Submit" Height="36" Width="98" Margin="26,170,220,17" Click="submitButton_Click"/>

        <TextBlock x:Name="finalScore" Text="Your final score: " Height="72" Visibility="Hidden" Padding="50,25" FontSize="16" Margin="60,40" />
    </Grid>
</Window>
