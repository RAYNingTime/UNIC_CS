<Window x:Class="FinalPractisesVP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalPractisesVP"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="ShoppingListOpenButton" Content="Shopping List"
                Margin="10" Click="ShoppingListOpenButton_Click"/>
        <Button x:Name="TaxCalculatorOpenButton" Content="Tax Calculator" 
                Grid.Row="1" Margin="10" Click="TaxCalculatorOpenButton_Click"/>
        <Button x:Name="HouseCustomizerOpenButton" Content="House Customizer" 
                Grid.Row="2" Margin="10" Click="HouseCustomizerOpenButton_Click"/>
    </Grid>
</Window>
